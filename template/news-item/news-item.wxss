.news-item {
  padding: 24rpx 32rpx;
  background-color: white;
  margin: 16rpx 0;
  box-shadow: 0 0 20rpx #e3e3e3;
  position: relative;
}

.news-item .keyword-wrapper {
  color: #3080de;
  font-size: 24rpx;
}

.news-item .keyword-wrapper .keyword {
  padding: 0 10rpx;
  display: inline-block;
  /* border-right: 1px solid; */
}

.news-item .keyword-wrapper .keyword:after {
  content: '';
  border-right: 1px solid #e3e3e3;
  height: 18rpx;
  display: inline-block;
  margin-left: 10rpx;
}

.news-item .keyword-wrapper .keyword:last-child::after {
  content: '';
  display: none;
}

.news-item .new-title {
  margin: 16rpx 0;
  font-size: 36rpx;
}

.news-item .new-info {
  font-size: 24rpx;
  color: #9e9e9e;
  margin-top: 25rpx;
}

.news-item .new-info .source-name {
  padding-right: 15rpx;
}

.news-item .zhuan-fa {
  position: absolute;
  bottom: 24rpx;
  right: 32rpx;
  width: 32rpx;
  height: 25rpx;
}
